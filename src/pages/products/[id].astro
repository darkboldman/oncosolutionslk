---
import Layout from '../../layouts/Layout.astro';
import productsData from '../../data/products.json';

// Get the product ID from the URL parameters
const { id } = Astro.params;

// Find the product with the matching ID
const product = productsData.find(p => p.id === id);

// If no product is found, redirect to the products page
if (!product) {
  return Astro.redirect('/products');
}

// Extract product details
const { name, shortDescription, description, price, stockStatus, images, specifications, documents,highlights } = product;

// Create WhatsApp message with product details
const whatsappMessage = `I'm interested in the product: ${name} (Price: $${price.toFixed(2)}, Status: ${stockStatus}). Please provide more information.`;
const whatsappLink = `https://wa.me/61425890982?text=${encodeURIComponent(whatsappMessage)}`;
---

<Layout title={`${name} | LED Lighting Solutions`}>
  <div class="product-detail-container">
    <div class="product-detail-header">
      <h1>{name}</h1>
      <a href="/products" class="back-to-products">&larr; Back to Products</a>
    </div>

    <div class="product-detail-content">
      <div class="product-gallery">
        <div class="main-image-container">
          {images && images.length > 0 ? (
            <img src={images[0]} alt={name} class="main-image" />
          ) : (
            <div class="placeholder-image">No Image Available</div>
          )}
        </div>
        
        {images && images.length > 1 && (
          <div class="thumbnail-gallery">
            {images.map((image, index) => (
              <div class="thumbnail-container">
                <img src={image} alt={`${name} - Image ${index + 1}`} class="thumbnail" />
              </div>
            ))}
          </div>
        )}
      </div>

      <div class="product-details">
        <div class="product-info-section">
          <p class="product-description">{shortDescription}</p>
          
          {description && (
            <div class="product-full-description">
              <p>{description}</p>
            </div>
          )}

          {highlights && highlights.length > 0 && (
            <div class="product-highlights">
              {highlights.map(highlight => (
                <div class="highlight-item">
                  <div class="highlight-icon">
                    <span class="material-icons material-symbols-outlined">{highlight.icon}</span>
                  </div>
                  <span class="highlight-text">{highlight.text}</span>
                </div>
              ))}
            </div>
          )}
          
          <div class="product-meta">
            <p class="product-price">${price.toFixed(2)}</p>
            <p class="stock-status" data-status={stockStatus.toLowerCase().replace(/\s+/g, '-')}>
              {stockStatus}
            </p>
          </div>
          
          {specifications && Object.keys(specifications).length > 0 && (
            <div class="product-specifications">
              <h2>Specifications</h2>
              <ul>
                {Object.entries(specifications).map(([key, value]) => (
                  <li><strong>{key}:</strong> {value}</li>
                ))}
              </ul>
            </div>
          )}
          
          {documents && documents.length > 0 && (
            <div class="product-documents">
              <h2>Documents</h2>
              <ul class="documents-list">
                {documents.map(doc => (
                  <li>
                    <a href={doc.file} target="_blank" class="document-link">
                      <span class="document-title">{doc.name}</span>
                      {/* <span class="document-type">{doc.type}</span> */}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}
          
          <div class="product-actions">
            <button class="request-quote-btn">Request Quote</button>
            <a href={whatsappLink} target="_blank" class="whatsapp-btn">
              <span class="whatsapp-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                </svg>
              </span>
              Chat on WhatsApp
            </a>
            {documents && documents.length > 0 && (
              <button class="download-spec-btn">Download Specifications</button>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .product-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .product-detail-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .product-detail-header h1 {
    font-size: 2rem;
    color: #2d3748;
    margin: 0;
  }

  .back-to-products {
    font-size: 1rem;
    color: #3182ce;
    text-decoration: none;
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .back-to-products:hover {
    color: #2c5282;
  }

  .product-detail-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .product-detail-content {
      grid-template-columns: 1fr 1fr;
    }
  }

  .product-gallery {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-image-container {
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 4/3;
  }

  .main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .main-image:hover {
    transform: scale(1.02);
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f7fafc;
    color: #a0aec0;
    font-weight: 500;
  }

  .thumbnail-gallery {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding: 0.5rem 0;
  }

  .thumbnail-container {
    flex: 0 0 auto;
    width: 80px;
    height: 80px;
    border: 1px solid #e2e8f0;
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
    transition: border-color 0.3s ease;
  }

  .thumbnail-container:hover {
    border-color: #3182ce;
  }

  .thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .product-info-section {
    padding: 1.5rem;
    background-color: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .product-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #4a5568;
    margin: 0;
  }
  
  .product-full-description {
    color: #4a5568;
    line-height: 1.6;
  }

  .product-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-top: 1px solid #e2e8f0;
    border-bottom: 1px solid #e2e8f0;
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d3748;
    margin: 0;
  }

  .stock-status {
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    margin: 0;
  }

  .stock-status[data-status="in-stock"] {
    background-color: #c6f6d5;
    color: #22543d;
  }

  .stock-status[data-status="on-order"] {
    background-color: #feebc8;
    color: #7b341e;
  }

  .stock-status[data-status="order-on-demand"] {
    background-color: #e9d8fd;
    color: #553c9a;
  }

  .stock-status[data-status="out-of-stock"] {
    background-color: #fed7d7;
    color: #822727;
  }

  .stock-status[data-status="at-supplier"] {
    background-color: #bee3f8;
    color: #2a4365;
  }

  .product-specifications {
    margin: 0;
  }

  .product-specifications h2,
  .product-documents h2 {
    font-size: 1.25rem;
    color: #2d3748;
    margin: 0 0 1rem 0;
  }

  .product-specifications ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .product-specifications li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #e2e8f0;
  }

  .product-specifications li:last-child {
    border-bottom: none;
  }
  
  .documents-list {
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .document-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background-color: #f7fafc;
    border-radius: 0.375rem;
    text-decoration: none;
    color: #4a5568;
    transition: background-color 0.3s ease;
  }
  
  .document-link:hover {
    background-color: #edf2f7;
  }
  
  .document-title {
    font-weight: 500;
  }
  
  .document-type {
    font-size: 0.875rem;
    color: #718096;
    background-color: #e2e8f0;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  .product-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .request-quote-btn, 
  .download-spec-btn,
  .whatsapp-btn {
    padding: 0.75rem 1rem;
    border-radius: 0.375rem;
    font-weight: 600;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    border: none;
  }

  .request-quote-btn {
    background-color: #3182ce;
    color: white;
  }

  .request-quote-btn:hover {
    background-color: #2c5282;
  }

  .whatsapp-btn {
    background-color: #25D366;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .whatsapp-btn:hover {
    background-color: #128C7E;
  }

  .whatsapp-icon {
    display: flex;
    align-items: center;
  }

  .download-spec-btn {
    background-color: #e2e8f0;
    color: #4a5568;
  }

  .download-spec-btn:hover {
    background-color: #cbd5e0;
  }
  /* Add this to your style section */
.product-highlights {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  padding: 1rem 0;
  border-top: 1px solid #e2e8f0;
}

.highlight-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
  min-width: 100px;
  padding: 0.75rem;
}

.highlight-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: #f7fafc;
  margin-bottom: 0.5rem;
  color: #3182ce;
}

.highlight-text {
  font-size: 0.875rem;
  font-weight: 500;
  color: #4a5568;
  line-height: 1.25;
}
.highlight-icon .material-icons .material-symbols-outlined {
  font-size: 24px;
}
.material-symbols-outlined {
  font-variation-settings:
  'FILL' 0,
  'wght' 400,
  'GRAD' 0,
  'opsz' 24
}


  @media (min-width: 640px) {
    .product-actions {
      flex-direction: row;
    }
    
    .request-quote-btn, 
    .download-spec-btn,
    .whatsapp-btn {
      flex: 1;
    }
    .product-highlights {
    flex-wrap: nowrap;
    justify-content: space-between;
  }
  }
</style>