<style>
  /* Base Styles */
  :root {
    --primary-color: rgba(41, 164, 240, 0.9);
    --primary-hover: #0056b3;
    --secondary-color: #6c757d;
    --light-bg: #f8f9fa;
    --dark-bg: #212529;
    --text-color: #1d2951;
    --text-light: #f8f9fa;
    --green-color:#03be03;
    --border-radius: 5px;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  /* Button Styles */
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    text-align: center;
  }

  .btn-primary {
    background-color: var(--primary-color);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--primary-hover);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }

  .btn-secondary:hover {
    background-color: var(--primary-color);
    color: white;
  }

  /* Hero Section */

  .hero {
      background: #ffffff;
      overflow: hidden;
      position: relative;
      width: 100%;
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .slider {
      position: relative;
      width: 100%;
      overflow: hidden;
    }
    .slides-container {
      display: flex;
      transition: transform 0.5s ease-in-out;
      width: 100%;
    }
    @keyframes zoomIn {
      0% {
        transform: scale(1);
      }
      100% {
        transform: scale(1.1); /* slight zoom */
      }
    }
    .slide {
      flex: 0 0 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 4rem;
      box-sizing: border-box;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      min-height: 90vh;
      position: relative;
      text-align: center;
      color: white;
      animation: zoomIn 20s ease-in-out infinite alternate;
    }
    .content {
      position: relative;
      z-index: 2;
      max-width: 700px;
    }
    .content::after {
      content: "";
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(46, 46, 46, 0.2); dark transparent overlay
      z-index: 1;
    }
    .content h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .content p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
    }
    
    .slide .content {
      max-width: 800px;
    }
    .slide h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: var(--text-light);
      z-index: 5;
    }
    .slide p {
      font-size: 1.1rem;
      margin-bottom: 2rem;
      color: var(--text-light);
    }
    .slide button {
      background: var(--primary-color);
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }
    .slide button:hover {
      background: #555;
    }
    .slide img {
      max-width: 1200px;
      width: 100%;
      object-fit: contain;
    }
    .nav {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(182, 181, 181, 0.5);
      color: #fff;
      border: none;
      font-size: 2rem;
      width: 50px;
      height: 50px;
      cursor: pointer;
      z-index: 10;
    }
    .nav.prev {
      left: 10px;
    }
    .nav.next {
      right: 10px;
    }

  /* Services Section */
  .services-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 80px 20px;
    }
    
    .services-header {
      text-align: center;
      margin-bottom: 60px;
    }
    
    .services-title {
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: #777;
      margin-bottom: 15px;
    }
    
    .services-heading {
      font-size: 42px;
      font-weight: 700;
      color: #2d3047;
      margin-bottom: 20px;
    }
    
    .services-heading span {
