---
// src/components/FeaturedProjects.astro
import ProjectCard from './ProjectCard.astro';
import projects from '../data/projects.json';

// Define props with defaults
export interface Props {
  title?: string;
  heading?: string;
  highlightedText?: string;
  subtitle?: string;
  maxProjects?: number;
  viewMoreText?: string;
  viewMoreUrl?: string;
}

const {
  title = "Featured Work",
  heading = "EXPLORE OUR",
  highlightedText = "HIGHLIGHTED PROJECTS",
  subtitle = "Discover our most innovative lighting solutions and automation projects that demonstrate excellence in design and implementation.",
  maxProjects = 6,
  viewMoreText = "View All Projects",
  viewMoreUrl = "/projects"
} = Astro.props;

// Filter for featured projects and take only the specified amount
const featuredProjects = projects
  .filter(project => project.featured === 'yes')
  .sort((a, b) => b.year - a.year) // Sort by year (newest first)
  .slice(0, maxProjects);
---

<section class="featured-projects">
  <div class="container">
    <div class="section-header">
      <h3 class="section-title">{title}</h3>
      <h2 class="section-heading">{heading} <span>{highlightedText}</span></h2>
      <p class="section-subtitle">{subtitle}</p>
    </div>
    
    <div class="projects-grid">
      {featuredProjects.length > 0 ? (
        featuredProjects.map(project => (
          <div class="project-item">
            <ProjectCard 
              name={project.name}
              featured={project.featured}
              year={project.year}
              scope={project.scope}
              description={project.description}
              clientUrl={project.clientUrl}
              location={project.location}
              imageUrl={project.imageUrl}
              slug={project.slug}
            />
          </div>
        ))
      ) : (
        <div class="no-projects">
          <p>No featured projects available.</p>
        </div>
      )}
    </div>
    
    <div class="view-more-container">
      <a href={viewMoreUrl} class="view-more-btn">
        {viewMoreText} <span class="arrow">â†’</span>
      </a>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .featured-projects {
    padding: 4rem 0;
    background-color: #fff;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .section-heading {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .section-heading span {
    color: var(--primary-color);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: #666;
    max-width: 700px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .no-projects {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem 0;
    color: #718096;
    font-size: 1.25rem;
  }

  .view-more-container {
    text-align: center;
    margin-top: 2rem;
  }

  .view-more-btn {
    display: inline-block;
    background-color: var(--primary-color);
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .view-more-btn:hover {
    background-color: var(--dark-blue);
    transform: translateY(-2px);
  }

  .view-more-btn .arrow {
    display: inline-block;
    margin-left: 0.5rem;
    transition: transform 0.2s ease;
  }

  .view-more-btn:hover .arrow {
    transform: translateX(4px);
  }

  /* Responsive design */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .section-heading {
      font-size: 2.2rem;
    }
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    
    .section-heading {
      font-size: 1.8rem;
    }
  }
</style>