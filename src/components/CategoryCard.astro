---
const { category, image } = Astro.props;
---

<div class="category-card">
  <img src={image} alt={category} class="category-image" />
  <div class="category-label">{category}</div>
</div>

<style>
.category-card {
  width: 180px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 10px;
  text-align: center;
  background: #fff;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
  transition: transform 0.3s;
}
.category-card:hover {
  transform: scale(1.05);
}
.category-image {
  width: 100%;
  height: 100px;
  object-fit: contain;
}
.category-label {
  margin-top: 10px;
  font-weight: bold;
  font-size: 16px;
}
</style>
