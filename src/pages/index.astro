<style>
  /* Base Styles */
  :root {
    --primary-color: #0062cc;
    --primary-hover: #0056b3;
    --secondary-color: #6c757d;
    --light-bg: #f8f9fa;
    --dark-bg: #212529;
    --text-color: #1d2951;
    --text-light: #f8f9fa;
    --green-color:#03be03;
    --border-radius: 5px;
    --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    --transition: all 0.3s ease;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
    font-size: 2.5rem;
    color: var(--text-color);
    position: relative;
  }

  .section-title:after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background: var(--primary-color);
    margin: 15px auto 0;
  }

  /* Button Styles */
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
    text-align: center;
  }

  .btn-primary {
    background-color: var(--primary-color);
    color: white;
  }

  .btn-primary:hover {
    background-color: var(--primary-hover);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }

  .btn-secondary:hover {
    background-color: var(--primary-color);
    color: white;
  }

  /* Hero Section */
  .hero {
    height: 100vh;
    min-height: 600px;
    background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/projects/army-banquet-welisara.jpg');
    background-size: cover;
    background-position: center;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 20px;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero p {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  /* Services Section */
  .services-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 80px 20px;
    }
    
    .services-header {
      text-align: center;
      margin-bottom: 60px;
    }
    
    .services-title {
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: #777;
      margin-bottom: 15px;
    }
    
    .services-heading {
      font-size: 42px;
      font-weight: 700;
      color: #2d3047;
      margin-bottom: 20px;
    }
    
    .services-heading span {
      color: rgba(85, 187, 250, 0.9);
    }
    
    .services-subtitle {
      max-width: 600px;
      margin: 0 auto;
      color: #666;
    }
    
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
    }
    
    .service-card {
      background-color: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      position: relative;
      height: 360px;
      display: flex;
      flex-direction: column;
      cursor: pointer;
      padding: 20px 10px;
    }
    
    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
    
    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(85, 187, 250, 0.902), rgba(6, 78, 126, 0.85));
      transform: translateY(-100%);
      transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      z-index: 1;
    }
    
    .service-card:hover::before {
      transform: translateY(0);
    }
    
    .service-content {
      padding: 10px;
      display: flex;
      flex-direction: column;
      height: 100%;
      position: relative;
      z-index: 2;
    }
    
    .service-icon .material-symbols-outlined {
      font-size: 50px;
      margin-bottom: 10px;
      color: #2d3047;
      transition: color 0.3s ease;
    }
    
    .service-card:hover .service-icon .material-symbols-outlined {
      color: white;
    }
    
    .service-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 5px;
      transition: color 0.3s ease;
    }
    
    .service-card:hover .service-title {
      color: white;
    }
    
    .service-description {
      font-size: 15px;
      color: #666;
      margin-bottom: 20px;
      transition: color 0.3s ease;
      flex-grow: 1;
    }
    
    .service-card:hover .service-description {
      color: rgba(255, 255, 255, 0.9);
    }
    
    .service-link {
      font-size: 14px;
      font-weight: 600;
      color: rgba(85, 187, 250, 0.9);
      text-decoration: none;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: color 0.3s ease;
      display: flex;
      align-items: center;
      margin-top: auto;
    }
    
    .service-card:hover .service-link {
      color: white;
    }
    
    .service-link svg {
      margin-left: 8px;
      transition: transform 0.3s ease;
    }
    
    .service-card:hover .service-link svg {
      transform: translateX(5px);
    }
    
    .new-badge {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: rgba(6, 78, 126, 0.85);
      color: white;
      font-size: 12px;
      font-weight: 600;
      padding: 5px 10px;
      border-radius: 4px;
      z-index: 3;
    }
    
    

