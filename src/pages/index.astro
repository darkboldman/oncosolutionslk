    }
    
    .services-subtitle {
      max-width: 600px;
      margin: 0 auto;
      color: #666;
    }
    
    .services-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 30px;
    }
    
    .service-card {
      background-color: rgb(227, 243, 252);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      position: relative;
      height: 360px;
      display: flex;
      flex-direction: column;
      cursor: pointer;
      padding: 20px 10px;
    }
    
    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }
    
    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(85, 187, 250, 0.902), rgba(6, 78, 126, 0.85));
      transform: translateY(-100%);
      transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      z-index: 1;
    }
    
    .service-card:hover::before {
      transform: translateY(0);
    }
    
    .service-content {
      padding: 10px;
      display: flex;
      flex-direction: column;
      height: 100%;
      position: relative;
      z-index: 2;
    }
    
    .service-icon .material-symbols-outlined {
      font-size: 50px;
      margin-bottom: 10px;
      color: #2d3047;
      transition: color 0.3s ease;
    }
    
    .service-card:hover .service-icon .material-symbols-outlined {
      color: white;
    }
    
    .service-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 5px;
      transition: color 0.3s ease;
    }
    
    .service-card:hover .service-title {
      color: white;
